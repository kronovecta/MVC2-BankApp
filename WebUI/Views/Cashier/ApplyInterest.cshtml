@model WebUI.ViewModels.Account.InterestViewModel

<form asp-action="ApplyInterest" asp-controller="Cashier" method="post">
    <div class="form-group">
        <label asp-for="AccountId">Account Number:</label>
        <input type="number" asp-for="AccountId" />
    </div>

    <div class="form-group">
        <label asp-for="Amount">Amount(%):</label>
        <input type="number" asp-for="Amount" />
    </div>

    <div class="form-group">
        <label asp-for="PreviousApplication">Previous Application</label>
        <input type="date" asp-for="PreviousApplication" />
    </div>

    <div class="form-group">
        <input type="submit" value="Apply" />
    </div>
</form>